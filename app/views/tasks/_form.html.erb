<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  <br>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <br>

  <%= f.submit '登録' %>
<% end %>
