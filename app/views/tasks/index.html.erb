<% if logged_in? %>
<h1>タスク一覧</h1>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> : <%= task.status %></li>
  <% end %>
</ul>

<%= link_to '新規タスクの登録', new_task_path %>
<%= link_to 'ログアウト', logout_path, method: :delete %></li>
<% else %>

redirect_to: login_path

<% end %>

